<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/igu_dark_blue"
    app:strokeWidth="1dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:id="@+id/studentCardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Имя студента"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Нажмите для просмотра профиля"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="4dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkboxPresent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Присутствует"
            android:textColor="@color/text_secondary"
            app:buttonTint="@color/igu_dark_blue"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>